{
  "name": "codify-images",
  "version": "1.4.22",
  "description": "Quick and easy tool for converting a set of images into inline JavaScript",
  "main": "dist/codify-images.js",
  "bin": {
    "codify-images": "./dist/cli.js"
  },
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "babel --verbose --out-dir dist src",
    "lint": "run-s -s lint:git lint:js lint:md",
    "lint:js": "eslint .",
    "lint:md": "markdownlint .",
    "lint:git": "commitlint --from origin/main --to HEAD",
    "format": "run-s -s format:js format:md",
    "format:js": "npm run -s lint:js -- --fix",
    "format:md": "npm run -s lint:md -- --fix",
    "pretest": "rimraf test/.temp/",
    "test": "run-s -s lint test:unit",
    "test:unit": "nyc mocha test/unit/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devpow112/codify-images.git"
  },
  "keywords": [
    "image",
    "converter"
  ],
  "author": "Devon Powell <devon.f.powell@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devpow112/codify-images/issues"
  },
  "homepage": "https://github.com/devpow112/codify-images#readme",
  "files": [
    "dist/**/*.js"
  ],
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=12.22.7",
    "npm": ">=6.14.15"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^10.0.0",
    "lodash.camelcase": "^4.3.0",
    "mini-svg-data-uri": "^1.4.4",
    "mkdirp": "^2.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/register": "^7.21.0",
    "@commitlint/cli": "^17.4.4",
    "@devpow112/babel-config": "^1.0.5",
    "@devpow112/commitlint-config": "^1.0.4",
    "@devpow112/eslint-config": "^1.1.4",
    "@devpow112/semantic-release-config": "^1.2.3",
    "chai": "^4.3.7",
    "eslint": "^8.36.0",
    "markdownlint-cli": "^0.33.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^4.4.1",
    "semantic-release": "^19.0.5",
    "sinon": "^15.0.2"
  }
}
