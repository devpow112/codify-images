{
  "name": "codify-images",
  "version": "1.4.1",
  "description": "Quick and easy tool for converting a set of images into inline JavaScript",
  "main": "dist/codify-images.js",
  "bin": {
    "codify-images": "./bin/codify-images"
  },
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "babel --verbose --out-dir dist src",
    "lint": "run-s -s lint:git lint:js lint:md",
    "lint:js": "eslint .",
    "lint:md": "markdownlint .",
    "lint:git": "commitlint --from origin/main --to HEAD",
    "format": "run-s -s format:js format:md",
    "format:js": "npm run -s lint:js -- --fix",
    "format:md": "npm run -s lint:md -- --fix",
    "pretest": "rimraf test/.temp/",
    "test": "run-s -s lint test:unit",
    "test:unit": "nyc mocha test/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devpow112/codify-images.git"
  },
  "keywords": [
    "image",
    "converter"
  ],
  "author": "Devon Powell <devon.f.powell@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devpow112/codify-images/issues"
  },
  "homepage": "https://github.com/devpow112/codify-images#readme",
  "files": [
    "bin/**/*",
    "dist/**/*.js"
  ],
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=12.22.7",
    "npm": ">=6.14.15"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "lodash.camelcase": "^4.3.0",
    "mini-svg-data-uri": "^1.4.3",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/register": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@semantic-release/git": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.4",
    "chai": "^4.3.4",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "eslint": "^8.3.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-mocha": "^9.0.0",
    "markdownlint-cli": "^0.30.0",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.1",
    "sinon": "^12.0.1"
  }
}
