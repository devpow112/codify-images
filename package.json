{
  "name": "codify-images",
  "version": "1.0.0",
  "description": "Convert directory of images to encoded JavaScript variables",
  "main": "dist/index.js",
  "bin": {
    "codify-images": "./dist/cli.js"
  },
  "scripts": {
    "build": "babel --verbose --out-dir dist src bin",
    "lint": "run-s -s lint:git lint:js lint:md",
    "lint:js": "eslint .",
    "lint:md": "markdownlint .",
    "lint:git": "commitlint --from origin/main --to HEAD",
    "format": "run-s -s format:js format:md",
    "format:js": "npm run -s lint:js -- --fix",
    "format:md": "npm run -s lint:md -- --fix",
    "test": "run-s -s lint test:unit test:integration",
    "test:unit": "nyc mocha test/unit/*.test.js",
    "test:integration": "npm run -s build && mocha test/integration/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devpow112/codify-images.git"
  },
  "keywords": [
    "image",
    "converter"
  ],
  "author": "Devon Powell <devon.f.powell@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devpow112/codify-images/issues"
  },
  "homepage": "https://github.com/devpow112/codify-images#readme",
  "files": [
    "dist/**/*.js"
  ],
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "lodash.camelcase": "^4.3.0",
    "mini-svg-data-uri": "^1.4.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/register": "^7.15.3",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@semantic-release/git": "^10.0.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "chai": "^4.3.4",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "eslint": "^8.1.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-mocha": "^9.0.0",
    "markdownlint-cli": "^0.29.0",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "semantic-release": "^18.0.0",
    "sinon": "^11.1.2"
  }
}
